form {
  width: 600rpx;
}

.check-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.check-con-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.message-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.timeline-con {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  margin-bottom: 100rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.timeline-con .timeline-line {
  border: 1px rgba(0, 0, 0, 0.2) solid;
  width: 35%;
  position: absolute;
  transform: translateX(50%);
  left: 14.5%;
  right: 14.5%;
  top: 40%;
}

.timeline-con .timeline-line-active {
  border: 1px #576b95 solid;
  transition: 500ms;
}

.timeline-con .timeline-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin: 0 auto;
  position: absolute;
  transform: translateX(-50%);
}

.timeline-item-l {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin: 0 auto;
  position: absolute;
  transform: translateX(-50%);
  left: 25%;
}

.timeline-item-r {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin: 0 auto;
  position: absolute;
  transform: translateX(50%);
  right: 25%;
}

.timeline-con .circle {
  width: 80rpx;
  height: 80rpx;
  border: 2px rgba(0, 0, 0, 0.2) solid;
  border-radius: 100rpx;
  color: rgba(0, 0, 0, 0.2);
  font-size: 32rpx;
  line-height: 80rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.timeline-con .circle-active {
  background-color: #576b95;
  color: #fff;
  border: 2px #576b95 solid;
  transition: 550ms;
}

.timeline-con .timeline-title {
  color: rgba(0, 0, 0, 0.2);
  font-size: 32rpx;
  line-height: 22rpx;
}

.timeline-con .timeline-title-active {
  color: #576b95;
  transition: 550ms;
}

.check-con-item .title {
  color: #576b95;
  font-weight: 900;
  font-size: 50rpx;
  margin-bottom: 60rpx;
}

.toBack {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 0;
  top: 0;
}