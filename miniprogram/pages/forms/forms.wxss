.cellgroup-title-class {
  color: #576b95;
  font-weight: bold;
  font-size: 30rpx;
}

.cellgroup-value-class {
  /* color:#576b95; */
  font-weight: bold;
  font-size: 30rpx;
}

.field-class {
  font-size: 30rpx;
  font-weight: bold;
}

