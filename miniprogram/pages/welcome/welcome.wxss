/* pages/welcome/welcome.wxss */
@import "../../style/common.wxss";

page {
  background-color: #d8e3e7;
}

.welcome-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  /* margin-top: 20%; */
  height: 1200rpx;
  width: 100%;
  justify-content: center;
}

.welcome-con .avatar {
  width: 200rpx;
  border-radius: 100%;
  margin: 36rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.welcome-con .nickName {
  font-size: 36rpx;
  font-weight: bold;
  color: #576b95;
  margin-bottom: 40%;
}