/* pages/share/share.wxss */
@import "../../style/common.wxss";

page {
  background-color: #d8e3e7;
}

.hidden-canvas {
  width: 0px;
  height: 0px;
  overflow: hidden;
}

.widget {
  /* position: absolute;
  top: 0;
  left: 0; */
}

canvas {
  width: 375px !important;
  height: 560px !important;
  z-index: -1 !important;
}

.share-con-all {
  position: relative;
  background-color: #d8e3e7;
  width: 750rpx;
  height: 800rpx;
  z-index: -1;
}

.top-img-con {
  position: absolute;
  top: 0;
  left: 0;
  height: 650rpx;
  width: 100%;
  overflow: hidden;
  z-index: -1;
}

.top-img-con image {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  object-fit: cover;
}

.share-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  /* padding-bottom: 80rpx; */
}

.share-con .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  margin: 10rpx;
  margin-top: 50rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.share-con .nickName {
  width: 400rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time-con {
  position: relative;
  width: 75%;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.time-con .time-text {
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
  line-height: 50rpx;
}

.time-con .time-l {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.time-con .time-l image {
  width: 40rpx;
  height: 40rpx;
}

.time-con .time-r {
  position: absolute;
  top: 0;
  right: 0;
}

.share-card-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  width: 80%;
  height: 690rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
}

.share-card-con .share-card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #576b95;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
}

.share-card-con .share-card-num {
  font-size: 80rpx;
  font-weight: bold;
}

.green-num {
  color: #61ac85;
}

.orange-num {
  color: #fba414;
}

.red-num {
  color: #c02c38;
}

.share-card-con .share-card-content {
  font-size: 30rpx;
  font-weight: bold;
  color: #576b95;
  margin-top: 50rpx;
  width: 80%;
  height: 80rpx;
  padding-top: 20rpx;
  border-top: 1px #576b95 dashed;
}

.share-card-con .share-card-time {
  font-size: 28rpx;
  font-weight: bold;
  /* color: #d8e3e7; */
  color: #576b95;
  margin-top: 10rpx;
}

.ewm {
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
}

.canvas-con {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.canvas-pic {
  width: 120px;
  height: 120px;
  background-color: #fff;
}

.download-con {
  position: relative;
  /* height: 50rpx; */
  width: 100%;

}
.download-button{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  position: absolute;
  bottom: 18rpx;
  right: 25rpx;
  height: 60rpx;
  width: 60rpx !important;
  padding: 0;
  border-radius: 100%;
}
.download-icon {
  /* position: absolute; */
  /* bottom: 20rpx; */
  /* right: 20rpx; */
  width: 60rpx;
  height: 60rpx;
}

.final-share-con {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70%;
  margin: 40rpx;

}

.final-share-button-style {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #576b95;
  /* font-weight: bold; */
  font-size: 32rpx;
  height: 90rpx;
  width: 220rpx !important;
  line-height: 100rpx;
  padding: 0 10rpx 0 30rpx;
  border-radius: 80rpx;
  /* margin-top: 60rpx; */
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.final-share-button-style text{
  margin: 0 auto;
}
.final-share-button-style image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}

