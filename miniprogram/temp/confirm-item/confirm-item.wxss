.confirmItem-con {
  width: 100%;
  height: 45px;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
}

.confirmItem-front {
  width: 12%;
  height: 100%;
  position: relative;
  margin-right: 20rpx;
  /* display: flex; *//* align-items: center; *//* justify-content: center; */
}

.confirmItem-circle {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 12px;
  height: 12px;
  background-color: #576b95;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

